<div id="result"></div>
<div>
    <% form_remote_tag :url => build_widget_url(:new), :update => "result", :html => {:id => 'inquiry_form'} do %>
    <div class="form_settings">
      <p>
        <span>First Name</span>
        <%= text_field_tag :first_name %>
      </p>
      <p>
        <span>Last Name</span>
        <%= text_field_tag :last_name %>
      </p>
      <p>
        <span>Email</span>
        <%= text_field_tag :email %>
      </p>
      <p>
        <span>Inquiry</span>
        <%= text_area_tag :inquiry, nil, {:class => 'contact textarea', :rows => 8, :cols => 50} %>
      </p>
      <p style="padding-top: 15px">
        <span>&nbsp;</span>
        <%=  submit_tag "Submit", :disable_with => "Please wait...", :class => "submit" %>
      </p>
    </div>
  <% end %>
</div>