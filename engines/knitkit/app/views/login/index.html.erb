<div id="loginDiv">
  <%
  display = 'none'
  unless flash[:notice].nil?
    display = 'block'
  end
%>
  <div id="requiredErrorDiv" style="display:<%=display%>;padding:5px;color:red;border:solid 1px #CCC;background-color:#CCFFCC;">
    <%=flash[:notice]%>
  </div>
  <br/>
  <form method="POST" action="/erp_app/application/create">
    <div>
      <p>
        <label for="login">Login</label>
        <input type="text" name="login" />
      </p>
      <p>
        <label for="password">Password</label>
        <input type="password" name="password" />
      </p>
      <input type="hidden" name="redirect_to" value="<%=@redirect_to%>" />
      <input type="hidden" name="logout_to" value="/login" />
    </div>
    <input class="button" type="submit" value="Login"/>
  </form>
</div>