package com.tnsolutionsinc.compass
 
import com.tnsolutionsinc.compass.model.Message;
 import com.tnsolutionsinc.compass.model.ResultMap;
rule "Hello World"
	when
		m : Message( status == Message.HELLO, message : message )
	then
		System.out.println( "hw:"+message ); 
		m.setMessage( "Goodbye cruel world" );
		m.setStatus( Message.GOODBYE );
		update( m );
end

rule "GoodBye"
	no-loop true
	when
		m : Message( status == Message.GOODBYE, message : message )
	and
		r : ResultMap()
	then
		System.out.println( "gb:"+message ); 
		m.setMessage( message );
		//RuleResult result = new RuleResult();
		r.put("rule status","rule GOODBYE Cruel World ran");
		
end